<% if @auth %>
  <div>Welcome <%= @auth[:username] %></div>

  <% if @auth.photos.where(:is_primary => true).any? %>
    <div class="th"><%= image_tag @auth.photos.where(:is_primary => true).first.image.standard.url %></div>
  <% else %>
    <div>You haven't set a main photo yet. Upload some photos and pick a primary photo!</div>
  <% end %>
  <div>Email: <%= @auth[:email] %></div>
  <div>Age <%= @auth[:age] %></div>
  <div>Gender <%= @auth[:gender] %></div>
  <div>City <%= @auth[:city] %></div>
  <div>State: <%= @auth[:state] %></div>
  <div>Description: <%= @auth[:description] %></div>

  <div class="photo1">
    Add photos to your profile!
    <%= link_to "Add photo to your profile", new_photo_path %>
  </div>


  <div><%= link_to "Search for new dates", search_path %></div>

  <% if @messages %><!-- If you have a message sent to you. I.e., in your inbox -->
    <% @messages.each do |message| %>
      <div>Message from: <%= User.find_by_id(message.sender).username %></div>
      <div>Subject: <%= message.subject %></div>
      <div>Message:</div>
      <div><%= message.content %></div>
    <% end %> 
  
  <% else %><!-- If you do not have any messages in your inbox -->
    <div>You have no new messages </div>
  <% end %>

<% else %> <!-- This is what happens if you are not logged in to a session -->

<div>Not logged in</div>

<% end %>