<%= form_for @message do |f| %>

  <div class="field">
    <div>
      <%= f.label :sender %>
      <%= f.text_field :sender %>
    </div>

    <div>
      <%= f.label :recipient %>
      <%= f.text_field :recipient %>
    </div>

    <div>
      <%= f.label :subject %>
      <%= f.text_field :subject %>
    </div>

    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

  <%= f.submit %>   
  </div><!-- .field -->
<% end %>