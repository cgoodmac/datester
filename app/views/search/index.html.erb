<h1>Search Page</h1>

<%= form_tag search_path, :method => 'get' do %>

  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

  
<% if @results %>
  <% @results.each do |result| %>
    <div><%= result.username %></div>
    <div><%= result.age %></div>
    <div><%= result.gender %></div>
    <div><%= result.city %></div>
    <div><%= result.state %></div>
    <div><%= result.description %></div>
    <div><%= result[:id] %></div>
    <div><%= link_to "Send a new message", new_message_path(result[:id]) %></div>s
    <!-- Add a link_To that sends the user id so that will be the recipient-->
  <% end %>
<% end %>

<div class="search_results clearfix">
  <% @results.each do |result| %>
    <%= link_to result do %>
      <div class="th result_pill">
        <% if result.photos.where(:is_primary => true).any? %>
          <div><%= image_tag result.photos.where(:is_primary => true).first.image.thumb.url %></div>
        <% else %> 
          <div>No avatar</div>
        <% end %>
        <p class="username"><%= result.username %></p>
      </div>
    <% end %>
  <% end %>
</div>

