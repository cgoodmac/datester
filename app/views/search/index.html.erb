<h1>Search Page</h1>

<%= form_tag search_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search], :placeholder => "Enter search terms here" %>
  <%= submit_tag "Search" %>
<% end %>

  
<% if @results %>
  <% @results.each do |result| %>

    <%= link_to result do %>
      <div class="th result_pill">
        <% if result.photos.where(:is_primary => true).any? %>
          <div><%= image_tag result.photos.where(:is_primary => true).first.image.standard.url %></div>
        <% else %>
          <div>No avatar</div>
        <% end %>
        <p class="username"><%= result.username %></p>
      </div>
    <% end %>

    <div><%#= result.username %></div>
    <div><%#= result.age %></div>
    <div><%#= result.gender %></div>
    <div><%#= result.city %></div>
    <div><%#= result.state %></div>
    <div><%#= result.description %></div>
    <!-- Add a link_To that sends the user id so that will be the recipient-->
  <% end %>
<% end %>


