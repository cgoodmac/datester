<h1>Search Page</h1>

<%= form_tag("/search", :method => "get") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<div class="search_results clearfix">
  <% @users.each do |user| %>
    <%= link_to user do %>
      <div class="th user_pill">
        <% if user.photos.where(:is_primary => true).any? %>
          <div><%= image_tag user.photos.where(:is_primary => true).first.image.thumb.url %></div>
        <% else %> 
          <div>No avatar</div>
        <% end %>
        <p class="username"><%= user.username %></p>
      </div>
    <% end %>
  <% end %>
</div>